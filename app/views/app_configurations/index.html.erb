<div class="card" style="width: 40rem;">
  <div class="card-body">
    <h5 class="card-title">Panel</h5>
    <p class="card-text">
      <p id="notice"><%= notice %></p>

      <h1>App Configurations</h1>

      <table>
        <thead>
          <tr>
            <th>Sorteo type</th>
            <th>Sorteo banner url</th>
            <th>Sorteo timeout</th>
            <th colspan="3"></th>
          </tr>
        </thead>

        <tbody>
          <% @app_configurations.each do |app_configuration| %>
            <tr>
              <td><%= app_configuration.sorteo_type %></td>
              <td><%= app_configuration.sorteo_banner_url %></td>
              <td><%= app_configuration.sorteo_timeout %></td>
              <td><%= link_to 'Show', app_configuration %></td>
              <td><%= link_to 'Edit', edit_app_configuration_path(app_configuration) %></td>
              <td><%#= link_to 'Destroy', app_configuration, method: :delete, data: { confirm: 'Are you sure?' } %></td>
            </tr>
          <% end %>
        </tbody>
      </table>

      <br>

      <%#= link_to 'New App Configuration', new_app_configuration_path %>
    </p>
  </div>
</div>
